# ==================================================
# CWCS Pipeline -- Environment Variables
# ==================================================
# Copy this file to .env and fill in your real values.
# NEVER commit .env to version control.

# --- Neo4j ---
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# --- vLLM / LLM inference ---
VLLM_ENDPOINT=http://localhost:8000/v1
VLLM_API_KEY=your-vllm-api-key-here
VLLM_MODEL=Henrychur/MMed-Llama-3-8B
VLLM_MAX_TOKENS=7000
VLLM_MAX_CHARS=25000

# --- External APIs ---
OMNIPATH_URL=https://omnipathdb.org/interactions

# --- Paths (override if data lives outside the project tree) ---
CWCS_GENE_DISCOVERY_DIR=/path/to/gene_discovery
CWCS_OUTPUT_DIR=/path/to/output/splits
